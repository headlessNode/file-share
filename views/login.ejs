<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>File Share - Login</title>
        <link rel="stylesheet" href="/output.css">
    </head>
    <body class="bg-gray-100 flex flex-col items-center justify-center">
        <div class="wrapper max-w-7xl w-full h-screen flex flex-col items-center justify-center">
            <div class="bg-white p-8 rounded-lg shadow-md w-96">
                <h2 class="text-2xl font-bold mb-6 text-center">Login</h2>
                <div class="text-red-500 mb-4">
                    <% if(locals.errors){ %>
                        <%- include('./partials/validationErrors') %>
                    <% } %>
                </div>
                <form action="/login" method="post" class="space-y-4">
                    <div>
                        <label for="username" class="block text-sm font-medium text-gray-700 mb-2">Username:</label>
                        <input
                            type="text"
                            id="username"
                            name="username"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                    >
                    </div>
                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700 mb-2">Password:</label>
                        <input
                            type="password"
                            id="password"
                            name="password"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                        >
                    </div>
                    <button
                        type="submit"
                        class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 disabled:bg-slate-300 transition duration-300"
                        disabled
                    >
                        Login
                    </button>
                </form>
                <div class="text-center mt-4 text-sm">
                    <span class="text-gray-600">Don't have an account?</span>
                    <a href="/signup" class="text-blue-500 hover:underline ml-1">
                        Sign up
                    </a>
                </div>
            </div>
        </div>
    </body>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const loginForm = document.querySelector('form');
            const loginFormInpus = loginForm.querySelectorAll('input');
            const loginFormSubmitBtn = loginForm.querySelector('button');

            loginFormInpus.forEach(input => {
                input.addEventListener('input', () => {
                    const username = loginForm.querySelector('#username').value.trim();
                    const password = loginForm.querySelector('#password').value.trim();
                    const disable = username === '' || password === '';
                    if (disable) {
                        loginFormSubmitBtn.setAttribute('disabled', '');
                    } else {
                        loginFormSubmitBtn.removeAttribute('disabled');
                    }
                });
            });
        });
    </script>
</html>